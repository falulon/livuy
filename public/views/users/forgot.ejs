<% layout('layouts/boilerplate')%>

    <div class="container d-flex justify-content-center align-items-center mt-3">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="/img/home_sheeps.jpg"
                        alt="coffee register image" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Forgot Password</h5>
                        <form action="/forgot" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input class="form-control" type="email" id="email" name="email" autofocus required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>


                    </div>
                    <button class="btn btn-secondary btn-block">Reset Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>