<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="/img/home_sheeps.jpg"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">כניסה<a href="register" class="float-end mx-auto">הרשמה</a></h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">שם משתמש/ת</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password">סיסמה</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <a href="/forgot" class="float-end">שכחתי</a>

                        </div>
                        <button class="btn btn-success btn-block">כניסה</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>