<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">עריכה</h1>
        <div class="col-md-6 offset-md-3">
            <div class="col">
               
                <form action="/campgrounds/<%=campgroundId%>/comments/<%=comment._id%>/edit?_method=PUT" method="POST">

                    <div class="mb-3">
                        <label class="form-label" for="body"></label>
                        <textarea class="form-control" name="comment[body]" id="bodyInModal" cols="30" rows="3"
                            required><%=comment.body[0]%></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button class="btn btn-success">שמירה</button>
                </form>
                <div class="row mt-4">
                    <div class="col">
                        <form action="/campgrounds/<%=campgroundId%>/comments/<%=comment._id%>/archive?_method=PUT"
                            method="POST">
                            <button class="btn btn-outline-secondary">ארכיון</button>
                        </form>


                    </div>
                    <div class="col">
                        <div class="bd-highlight">
                        
                        

                            <form action="/campgrounds/<%=campgroundId%>/comments/<%=comment._id%>?_method=DELETE"
                                method="POST">
                                <button class="btn btn-sm btn-danger">מחיקה</button>
                            </form>
    
    
                            

                        </div>
                    </div>
                </div>

                <div class="mb-5"></div>

                <% for (let i=comment.body.length-1 ; i>0 ; i--) { %>
                    <div class="card mb-3 ">
                        <div class="card-body text-muted">
                            <%= comment.body[i] %>
                        </div>
                    </div>
                    <% } %>




                        <a href="/campgrounds/<%= campgroundId%>">Back</a>

            </div>
        </div>